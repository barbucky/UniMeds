{% extends "base.html.twig" %}
{% block title %}Mon profil{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div class="container-fluid">
        <div style="height: 150px; background-color: #059BE6" class="row d-flex-column justify-content-end">
            <div style="width: 80px; height: 80px" class="px-0 mt-1 me-1">
                <img  class="img-fluid rounded-circle" src="{{ asset('assets/images/defaut-avatar-profil.jpg') }}" alt="Avatar du profil">
            </div>
            <div class="d-flex justify-content-end align-items-end">
                {% if  app.user %}
                    <p class="text-white">Bonjour, {{ app.user.fullName }}</p>
                {% endif %}


            </div>
        </div>
    </div>
    <div class="container py-3">
        <h3 class="text-center">Informations personnelles</h3>
        <div class="col-6 mx-auto border rounded shadow p-3 my-3 ">
            <form class="infosForm" action="">
                <label class="mb-2 mt-1" for="inputCivility">Civilité</label>
                <input type="text" readonly value= "{% if app.user.civility.sexe %}Mr.{% else %}Mme.{% endif%}" name="civility" id="inputCivility" class="form-control">
                <label class="mb-2 mt-1" for="inputLast_name">Nom</label>
                <input type="text" readonly value= "{{ app.user.lastName }}" name="last_name" id="inputLast_name" class="form-control">
                <label class="mb-2 mt-1" for="inputFirst_name">Prénom</label>
                <input type="text" readonly value= "{{ app.user.firstName }}" name="fist_name" id="inputFirst_name" class="form-control">
                <label class="mb-2 mt-1" for="inputDOB">Date de naissance</label>
                <input type="text" readonly value= "{{ app.user.dateOfBirth|date('d/m/Y') }}" name="date_of_birth" id="inputDOB" class="form-control">
                <label class="mb-2 mt-1" for="inputSecuSociale">N° Sécurité Sociale</label>
                <input type="text" readonly value= "{{ app.user.patient.socialSecurityNumber }}" name="SecuSociale" id="inputSecuSociale" class="form-control">
                <label class="mb-2 mt-1" for="inputAddress">Adresse</label>
                <input type="text" readonly value= "{{ app.user.address }}" name="address" id="inputAddress" class="form-control">
                <label class="mb-2 mt-1" for="inputEmail">Email</label>
                <input type="text" readonly value= "{{ app.user.email }}" name="email" id="inputEmail" class="form-control">
                <label class="mb-2 mt-1" for="inputPhone">Téléphone</label>
                <input type="text" readonly value= "{{ app.user.phone }}" name="phone" id="inputPhone" class="form-control">

            </form>
            <div class="d-flex justify-content-center mt-3">
                <a class="w-50" href="{{ path('app_patient_patientUpdate') }}"><button class="btn vali w-100">Modifier</button></a>
            </div>
        </div>
    <h3 class="text-center">Mot de passe</h3>
    <div class="col-6 mx-auto border rounded shadow p-3 my-3 ">
        <form class="infosForm" action="">
            <input type="text" readonly value= "xxxxxxxxxxxxxxx" name="civility" id="inputCivility" class="form-control text-center">
        </form>
        <div class="d-flex justify-content-center mt-3">
            <a class="w-50" href="{{ path('app_editpassword',{'id':app.user.id}) }}"><button class="btn vali w-100">Modifier</button></a>
        </div>
    </div>
{% endblock %}