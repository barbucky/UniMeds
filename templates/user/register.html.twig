{% extends "base.html.twig" %}

{% block title %}Inscription{% endblock %}
{% block navbar %}{% endblock %}

{% block body %}
    {# raccourci pour ce qui suit =
    .container>.row>.col-6.mx-auto>h1{Créer votre compte}
    puis finir par la touche tab#}

    <div class="container">
        <div class="row mb-3">
            <div class="d-flex flex-column align-items-center mt-5 col-6 ">
                <div class="col-4">
                    <img class="img-fluid" src="{{ asset('assets/images/UniMeds_logo.png') }}" alt="Logo UniMeds">
                </div>
                <div>
                <p class="text-center">Créez un compte et profitez des services proposés par UniMeds</p>
                <hr>
                <p class="text-center">Vous possédez déjà un compte?<br/>
                    <a href={{ path('app_login')}}>Connectez-vous!</a></p>
                    <br/>
                    <br/>
                    <p class="text-center">Vous êtes un professionnel de santé?<br/>
                        <a href={{ path('app_inscription_doc')}}>Rejoignez-vous!</a></p>

                </div>
            </div>
            <div class="col-6 border border-primary rounded-1 mt-5">
                <h1 class="text-center mb-5">Créez votre compte</h1>
                {{ form_start(form)}}
                <div class="Form-group">
                    {{ form_row(form.Civility.sexe) }}
                </div>
                <div class="Form-group">
                    {{ form_row(form.last_name) }}
                </div>
                <div class="Form-group">
                    {{ form_row(form.first_name) }}
                </div>
                <div class="Form-group">
                    {{ form_row(form.date_Of_Birth) }}
                </div>
                <div class="Form-group">
                    {{ form_row(form.Patient.social_security_number) }}
                </div>
                <div class="Form-group">
                    {{ form_row(form.Address.street_name) }}
                </div>
                <div class="Form-group">
                    {{ form_row(form.Address.city_name) }}
                </div>
                <div class="Form-group">
                    {{ form_row(form.Address.postal_code) }}
                </div>
                <div class="Form-group">
                    {{ form_row(form.email) }}
                </div>
                <div class="Form-group">
                    {{ form_row(form.phone) }}
                </div>
                <div class="Form-group">
                    {{ form_row(form.password) }}
                </div>
                {{ form_end(form) }}
            </div>

        </div>
    </div>


    
{% endblock %}

